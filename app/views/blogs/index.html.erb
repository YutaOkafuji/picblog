<% if user_signed_in? %>
    <%= link_to "ログアウト",destroy_user_session_path,method: 'delete' %>
    <%= link_to "#{current_user.nickname}","/users/#{current_user.id}",class: 'get' %>
<% else %>
    <%= link_to "ログイン",new_user_session_path,class: 'post' %>
    <%= link_to "新規登録",new_user_registration_path,class: 'post' %>
<% end %>

<%= @blog.each do |blog| %>
    <p><%= link_to "#{blog.title}","/blogs/#{blog.id}",class: 'get' %><p>
<% end %>

<%= paginate(@blog) %>
