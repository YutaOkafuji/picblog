
<div class="text-center">
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: 'form-signin'}) do |f| %>

    <%= f.label :email,html: {class: "sr-only"}%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",html: {id: "inputEmail", class: "form-control"}%>
    <div>
    <%= f.label :password,html: {class: "sr-only"}%><br />
    <%= f.password_field :password, autocomplete: "current-password",html: {id: "inputPassword", class: "form-control"} %>
  </div>
  <div class="checkbox mb-3">
    <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    <% end %>
  </div>

    <%= f.submit "Log in",html: {class: "btn btn-lg btn-primary btn-block"}  %>
<% end %>
<%= render "devise/shared/links" %>
</div>


